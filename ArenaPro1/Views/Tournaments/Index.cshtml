@model IEnumerable<ArenaPro1.DTOs.TournamentDTO>

@{
    ViewData["Title"] = "Tournaments";
}

<h1>Tournaments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Game</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tournament in Model)
        {
            <tr>
                <td>@tournament.Name</td>
                <td>@tournament.Game</td>
                <td>@tournament.StartDate.ToShortDateString()</td>
                <td>@tournament.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@tournament.TournamentId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@tournament.TournamentId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@tournament.TournamentId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>